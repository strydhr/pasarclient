<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:id="@+id/hint_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageView
            android:id="@+id/blinky_icon"
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:src="@drawable/whiteleft"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="40dp"/>
        <TextView
            android:id="@+id/addprod_hint_text"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"

            android:layout_toRightOf="@id/blinky_icon"
            android:gravity="center"
            android:text="Click this to chansdasdasdasdsdge the search radius"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="24dp"
            android:textStyle="bold"
            />

    </LinearLayout>







</RelativeLayout>